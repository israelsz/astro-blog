---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        color: #e9d5ff;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #0a0012;
        background-image: 
          radial-gradient(at 20% 30%, rgba(124, 45, 111, 0.3) 0px, transparent 50%),
          radial-gradient(at 80% 70%, rgba(74, 25, 66, 0.3) 0px, transparent 50%);
        min-height: 100vh;
        padding: 1rem;
        color: #e9d5ff;
      }
      
      .container {
        max-width: 800px;
        margin: 2rem auto;
        background: rgba(22, 10, 31, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        overflow: hidden;
        border: 1px solid rgba(192, 132, 252, 0.1);
      }
      
      header {
        background: linear-gradient(135deg, rgba(124, 45, 111, 0.6) 0%, rgba(74, 25, 66, 0.6) 100%);
        padding: 3rem 2.5rem 2rem;
        border-bottom: 1px solid rgba(192, 132, 252, 0.2);
      }
      
      header h1 {
        font-size: 2.75rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        background: linear-gradient(135deg, #fbbf24 0%, #f472b6 50%, #c084fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
      }
      
      nav {
        display: flex;
        gap: 0.5rem;
        margin-top: 1.5rem;
      }
      
      nav a {
        color: #e9d5ff;
        text-decoration: none;
        font-weight: 500;
        padding: 0.625rem 1.25rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        border: 1px solid transparent;
        font-size: 0.95rem;
      }
      
      nav a:hover {
        background: rgba(192, 132, 252, 0.15);
        border-color: rgba(192, 132, 252, 0.3);
        transform: translateY(-1px);
      }
      
      main {
        padding: 3rem 2.5rem;
        min-height: 400px;
      }
      
      article {
        line-height: 1.75;
        color: #c4b5fd;
      }
      
      article h2 {
        color: #e9d5ff !important;
        margin-bottom: 1.5rem;
        font-size: 2rem;
        font-weight: 700;
        letter-spacing: -0.01em;
      }
      
      article p {
        margin-bottom: 1.25rem;
        font-size: 1.05rem;
        color: #c4b5fd !important;
        line-height: 1.8;
      }
      
      article img {
        width: 100%;
        border-radius: 12px;
        margin: 1.5rem 0;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(192, 132, 252, 0.2);
      }
      
      footer {
        padding: 1.5rem 2.5rem;
        text-align: center;
        color: #a78bfa;
        border-top: 1px solid rgba(192, 132, 252, 0.1);
        font-size: 0.9rem;
        background: rgba(0, 0, 0, 0.2);
      }

      @media (max-width: 768px) {
        body {
          padding: 0.5rem;
        }
        
        .container {
          margin: 1rem auto;
        }
        
        header {
          padding: 2rem 1.5rem 1.5rem;
        }
        
        header h1 {
          font-size: 2rem;
        }
        
        main {
          padding: 2rem 1.5rem;
        }
        
        article h2 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>My Awesome Blog Testt</h1>
        <nav>
          <a href="/">Home</a>
          <a href="/about">About</a>
        </nav>
      </header>
      
      <main>
        <slot />
      </main>
      
      <footer>
        <p>&copy; 2025 Test. Built with Astro.</p>
      </footer>
    </div>
  </body>
</html>
