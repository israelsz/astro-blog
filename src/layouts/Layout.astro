---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 min-h-screen">
		<header class="bg-white shadow-sm border-b border-gray-200">
			<nav class="max-w-4xl mx-auto px-4 py-6 flex gap-6">
				<a href="/" class="text-blue-600 hover:text-blue-800 font-medium transition-colors">Home</a>
				<a href="/post" class="text-blue-600 hover:text-blue-800 font-medium transition-colors">Blog Post</a>
			</nav>
		</header>
		<main class="max-w-4xl mx-auto px-4 py-8">
			<slot />
		</main>
	</body>
</html>
